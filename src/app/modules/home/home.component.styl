@import '~src/assets/stylus/_colors';
@import '~src/assets/stylus/_rem';

.home
  width 100%
  min-height 100vh
  display flex
  justify-content center
  align-items center

  & > .content
    width 100%
    height 100%
    transform translateY(-50%)

    & > .title
      font-size rem(32)
      line-height 1.5
      text-align center
      text-transform uppercase
      color $fontPrimaryColor
      font-weight 500
      width 860px
      margin 0 auto
      margin-bottom rem(80)
