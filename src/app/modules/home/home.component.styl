@import '../../../assets/stylus/_colors';
@import '../../../assets/stylus/_rem';

.wrapper
  width 100%
  min-height 100vh
  background-color $mainBG
  font-family 'Roboto', sans-serif

  & > .sidebar
    width 200px
    position fixed
    top 0
    bottom 0
    left 0
    background $sidebarBG
    padding 36px 20px

    &.-closed
      width 60px
      overflow hidden

      & + .container
        width calc(100% - 6rem)
        margin-left 6rem

      & > .close
        transform translateX(-10px) rotate(180deg)

      & > .navigation .link .icon
        font-size rem(28)
        transform translateX(-4px)

    & > .close
      width rem(40)
      height rem(40)
      border-radius 999px
      background-color darken($sidebarBG, 25%)
      display flex
      justify-content center
      align-items center
      margin-left auto
      cursor pointer
      transition background-color 0.2s ease, rotate 0.2s ease

      & > .icon
        color $fontPrimaryColor
        opacity 0.6
        font-size rem(38)
        transition opacity 0.2s ease

      &:hover
        background-color darken($sidebarBG, 35%)

        & > .icon
          opacity 0.8

    & > .navigation
      margin-top rem(8)

      & > .link
        padding rem(20) rem(0)
        font-size rem(16)
        color $fontSidebarColor
        opacity 0.5
        display flex
        align-items flex-end
        cursor pointer

        & > .icon
          margin-right rem(14)
          font-size rem(22)

        &:hover
          opacity 1

  & > .container
    width calc(100% - 20rem)
    height 100vh
    margin-left 20rem
    position relative
    display flex
    justify-content center
    align-items center

    & > .background
      width 100%
      height 100%
      position absolute
      left 0
      top 0
      right 0
      bottom 0
      background-image url('../../../assets/images/backgrounds/bg1.jpg')
      background-repeat no-repeat
      background-size cover
      mix-blend-mode luminosity
      opacity 0.05
      filter blur(4px)
      pointer-events none

    & > .content
      max-width 1660px
      margin 0 auto

      & > .home
        width 100%

        & > .title
          font-size rem(32)
          line-height 1.5
          text-align center
          text-transform uppercase
          color $fontPrimaryColor
          font-weight 500
          width 860px
          margin 0 auto
          margin-bottom rem(80)

        & > .search
          text-align center
          position relative
          display flex

          & > input
            font-size rem(16)
            padding rem(24) rem(56)
            background-color $inputBgColor
            color $inputColor
            border-top-left-radius 3px
            border-bottom-left-radius 3px
            font-weight 300
            border none
            width calc(100% - 7rem)
            margin 0 auto
            outline none

            &::placeholder
              color $inputColor
              opacity 0.7

          & > .icon
            position absolute
            font-size rem(32)
            color $inputColor
            left rem(12)
            top 50%
            transform translateY(-50%)

          & > button
            width rem(70)
            background-color $inputColor
            color $fontPrimaryColor
            font-size rem(14)
            padding rem(10) rem(20)
            outline none
            border none
            border-top-right-radius 3px
            border-bottom-right-radius 3px
            display flex
            justify-content center
            align-items center
            text-transform uppercase
            cursor pointer
