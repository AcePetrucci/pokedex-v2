@import '~src/assets/stylus/_colors';
@import '~src/assets/stylus/_rem';

:host
  position absolute
  left 0
  right 0

.results
  width 100%
  background-color $selectBgColor
  padding rem(5) rem(10) rem(10)
  border-bottom-left-radius 3px
  border-bottom-right-radius 3px

  & > .title
    color $fontSecondaryColor
    font-size rem(12)
    margin rem(10) 0 0
    text-transform uppercase
    letter-spacing rem(1)

  & > .labels
    width 100%
    display flex
    flex-wrap wrap

    & > .label
      background-color $labelsBGColor
      border-radius rem(3)
      padding rem(6) rem(8)
      margin rem(10) rem(5) 0 0
      display flex
      justify-content center
      align-items center
      cursor pointer

      &:hover
        filter brightness(1.1)

      & > .image
        width rem(26)
        height rem(26)
        margin-right rem(5)
        display flex
        justify-content center
        align-items center
        transform translateX(-2px)

        & img
          width rem(28)
          height rem(28)

      & > .name
        color $fontPrimaryColor
        font-size rem(14)
        font-weight 400
        text-transform capitalize
        text-shadow 0 0 12px rgba(0,0,0,.25)
