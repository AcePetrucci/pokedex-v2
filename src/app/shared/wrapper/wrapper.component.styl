@import '~src/assets/stylus/_colors';
@import '~src/assets/stylus/_rem';

.wrapper
  width 100%
  min-height 100vh
  background-color $mainBG
  font-family 'Roboto', sans-serif

  & > .container
    width calc(100% - 20rem)
    height 100vh
    margin-left 20rem
    position relative
    transition width 0.2s ease, margin-left 0.2s ease

    & > .background
      width 100%
      height 100%
      position absolute
      left 0
      top 0
      right 0
      bottom 0
      background-image url('../../../assets/images/backgrounds/bg1.jpg')
      background-repeat no-repeat
      background-size cover
      mix-blend-mode luminosity
      opacity 0.05
      filter blur(4px)
      pointer-events none

    & > .content
      max-width 1660px
      margin 0 auto
