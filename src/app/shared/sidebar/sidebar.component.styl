@import '../../../assets/stylus/_colors';
@import '../../../assets/stylus/_rem';

:host
  width 200px
  position fixed
  top 0
  bottom 0
  left 0
  background $sidebarBG
  padding 36px 20px
  transition width 0.3s ease

  &.-closed
    width 60px
    overflow hidden

    &::ng-deep + .container
      width calc(100% - 6rem) !important
      margin-left 6rem !important

    & > .close
      transform translateX(-10px) rotate(180deg)

    & > .navigation .link .icon
      transform translateX(-2px) scale(1.3)

  & > .close
    width rem(40)
    height rem(40)
    border-radius 999px
    background-color darken($sidebarBG, 25%)
    display flex
    justify-content center
    align-items center
    margin-left auto
    cursor pointer
    transition background-color 0.2s ease, transform 0.2s ease

    & > .icon
      color $fontPrimaryColor
      opacity 0.6
      font-size rem(38)
      transition opacity 0.2s ease

    &:hover
      background-color darken($sidebarBG, 35%)

      & > .icon
        opacity 0.8

  & > .navigation
    margin-top rem(8)

    & > .link
      padding rem(20) rem(0)
      font-size rem(16)
      color $fontSidebarColor
      opacity 0.5
      display flex
      align-items flex-end
      cursor pointer

      & > .icon
        margin-right rem(18)
        font-size rem(22)
        transition transform 0.2s ease
        transform translateX(0) scale(1)

      &:hover
        opacity 1
